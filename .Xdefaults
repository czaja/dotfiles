URxvt*termName: rxvt
URxvt*title: czaja
URxvt*scrollBar: false
URxvt*borderLess:	false
URxvt*inheritPixmap:	true
URxvt.shading: 25 !trans, 0=opaque
URxvt.fading: 10 !term unfocus
Urxvt*geometry: 100x30
URxvt*tintColor: white
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintfull
Xft.rgba: rgb
urxvt*perl-ext-common: selection-autotransform,matcher,copyandpaste
#urxvt*perl-ext-common: selection-autotransform,matcher,tabbed
#urxvt*urlLauncher: opera-urxvt
urxvt*urlLauncher: firefox
urxvt*cutchars: `"()'*<>[]{|}
URxvt.matcher.pattern.1: \\bwww\\.[\\w-]\\.[\\w./?&@#-]*[\\w/-]
urxvt*matcher.button: 1
URxvt.buffered: true
URxvt.background: black
URxvt.foreground: white
URxvt.cursorColor: green
URxvt*font: xft:Monospace:pixelsize=13:antialias=true:hinting=true
URxvt*boldFont: xft:Monospace:pixelsize=13:antialias=true:bold:hinting=true
URxvt*italicFont: xft:Monospace:pixelsize=13:antialias=true:italic:autohint=true
URxvt*bolditalicFont: xft:Monospace:pixelsize=13:antialias=true:bold:italic:auto
#URxvt.font: xft:Monospace:pixelsize=13
#URxvt.boldFont: xft:Monospace:pixelsize=13
#URxvt.font: -*-terminus-medium-r-*-*-13-*-*-*-*-*-iso10646-*
#URxvt.boldFont: -*-terminus-bold-r-*-*-13-*-*-*-*-*-iso10646-*
#URxvt.tabbed.tabbar-fg: 4
#URxvt.tabbed.tabbar-bg: 0
#URxvt.tabbed.tab-fg: 2
#URxvt.tabbed.tab-bg: 0

## xterm config
xterm*termName: xterm
xterm*background: #000000
xterm*foreground: #A8A8A8
